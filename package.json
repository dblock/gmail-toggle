{
  "name": "gmail-toggle",
  "version": "0.4.0",
  "description": "A Chrome extension that toggles (shows or hides) categories and labels that have unread messages in GMail.",
  "private": true,
  "license": "MIT",
  "scripts": {
    "watch": "webpack --mode=development --watch --config config/webpack.config.js",
    "build": "webpack --mode=production --config config/webpack.config.js",
    "pack": "node pack.js",
    "repack": "npm run build && npm run pack",
    "format": "prettier --write --ignore-unknown \"{config,public,src}/**/*.{html,css,js,ts,json}\"",
    "clean": "rm -rf build release",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "test": "jest"
  },
  "dependencies": {
    "gmail-js": "^1.1.14",
    "jest-environment-jsdom": "^29.7.0",
    "jquery": "^4.0.0-beta",
    "jsdom": "^26.0.0",
    "versatile-tree": "^1.3.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "adm-zip": "^0.5.16",
    "babel-jest": "^29.7.0",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.11.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "file-loader": "^6.2.0",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.2",
    "prettier": "^3.0.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.10.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  }
}
